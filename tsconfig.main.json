{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "include": [
        "src/main/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}