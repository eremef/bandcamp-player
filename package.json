{
  "name": "bandcamp-player",
  "version": "1.4.3-beta",
  "description": "Desktop music player for Bandcamp with offline caching and playlist management",
  "main": "dist/main/main.js",
  "author": "Bandcamp Player",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run start\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run test && npm run build:main && npm run build:renderer && node scripts/copy-assets.js",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:mobile": "cd mobile && npm test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "package": "npm run build && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild && electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0-rc.12",
    "electron-store": "^8.1.0",
    "lucide": "^0.563.0",
    "lucide-react": "^0.563.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^24.0.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "glob": "^11.0.1",
    "globals": "^17.1.0",
    "happy-dom": "^20.4.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "xyz.eremef.bandcamp.player",
    "productName": "Bandcamp Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "overrides": {
    "tar": "7.5.4",
    "@electron/rebuild": {
      "tar": "6.2.1"
    },
    "electron-builder": {
      "tar": "6.2.1"
    }
  }
}