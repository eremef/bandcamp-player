{
  "name": "bandcamp-desktop-player",
  "version": "1.6.3-alpha-2",
  "description": "Desktop music player for Bandcamp with offline caching and playlist management",
  "main": "dist/main/main.js",
  "author": "eremef.xyz",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run start\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run test && npm run build:main && npm run build:renderer && node scripts/copy-assets.js",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "lint": "eslint src",
    "lint:mobile": "eslint mobile",
    "typecheck": "tsc --build",
    "test": "vitest run",
    "test:mobile": "cd mobile && npm test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "package": "npm run build && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild && electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "chromecast-api": "^0.4.2",
    "electron-store": "^11.0.2",
    "lucide": "^0.563.0",
    "lucide-react": "^0.563.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^13.0.1",
    "globals": "^17.3.0",
    "happy-dom": "^20.5.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "xyz.eremef.bandcamp.player",
    "productName": "bandcamp-desktop-player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/icons/icon.ico",
      "artifactName": "Windows-${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/icons",
      "maintainer": "eremef.xyz <eremef.xyz@gmail.com>",
      "artifactName": "Linux-${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/icon.png",
      "artifactName": "MacOS-${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "overrides": {
    "tar": "7.5.4",
    "@electron/rebuild": {
      "tar": "6.2.1"
    },
    "electron-builder": {
      "tar": "6.2.1"
    }
  }
}