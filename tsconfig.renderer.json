{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ],
            "@renderer/*": [
                "./src/renderer/*"
            ]
        },
        "composite": true,
        "noEmit": true
    },
    "include": [
        "src/renderer/**/*",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}